<header class="top-header">
    <div class="logo">
        <img src="/images/site/icon.png" alt="cse-icon">
        <span class="site-name">
            <a href="/" title="Return to home page">CSE Motors</a>
        </span>
    </div>    
    <div id="tools">
        <% if (locals.loggedin) { %>
            <a title="Click to manage your account" href="/account/">
                Welcome, <%= locals.accountData.account_firstname %>
            </a><br>
            <a title="Click to logout" href="/account/logout">Logout</a>
        <% } else { %>
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>        
    </div>
</header>